<scroll-view class="container" scroll-y="true">
    <block wx:for="{{point}}" wx:for-index="idx" wx:for-item="item">
            <view class="group" data-pid="{{item.id}}">
                <view class="top">
                    <view class="shopTitle">{{item.name}}</view>
                </view>
                <view class="middle">
                    <block wx:for="{{item.list}}" wx:for-item="point">
                        <view class="point">
                            <view class="left">
                                <image src="{{point.icon}}" class="icon"/>
                            </view>
                            <view class="center">
                                <view class="title">{{point.name}}</view>
                                <view class="dsc">{{point.dsc}}</view>
                            </view>
                            <view class="right">
                                <view class="price">￥{{point.price}}</view>
                                <view class="count">{{count[point.id].count}}</view>
                            </view>
                        </view>
                    </block>
                </view>
                <view class="bottom">
                    <view class="luggage">运费：￥{{item.luggage}}</view>
                    <view class="total">合计：￥{{item.total}}</view>
                </view>
            </view>
        </block>
</scroll-view>
<button id="go" bindtap="goPay" type="warn">(￥{{total}})去支付</button>
<modal class="modal" hidden="{{modalHidden}}" no-cancel bindconfirm="modalChange">
  <view>没appID,不能做了~~</view>
</modal>