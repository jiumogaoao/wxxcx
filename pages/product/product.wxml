<view class="container">
    <view class="top">
        <swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" id="initSwiper" bindtap="go">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="355" height="150"/>
      </swiper-item>
    </block>
  </swiper>
        <view class="mid">
            <view class="name">{{name}}</view>
            <view class="count">
                <view class="price">￥{{price}}</view>
                <view class="countFrame">
                    <button class="sub" bindtap="sub" type="default">-</button>
                    <input value="{{count}}" class="value"/>
                    <button class="add" bindtap="add" type="default">+</button>
                </view>
                <button class="go" bindtap="goCart" type="default">去购物车</button>
            </view>
        </view>
        <view class="bottom">
            {{dsc}}
        </view>
    </view>
    
</view>