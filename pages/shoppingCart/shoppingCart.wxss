.container{
    height: 90%;
}
.point{
    display: flex;
    justify-content:space-around;
    margin-bottom: 20rpx;
    padding:10rpx;
    background-color: #c4e8f7;
}
.point .icon{
    width:20%;
}
.point .icon image{
    width:100%;
    height: 100%;
}
.point .mid{
    width:50%;
}
.point .name{
    text-indent: 20rpx;
}
.point .dsc{
    text-indent: 20rpx;
    font-size: 12rpx;
    margin-top: 10rpx
}
.point .count{
    width:20%;
}
.point .go{
    width:10%;
    text-align: center;
    line-height: 100rpx;
}
.point .price{
    text-align: center;
}
.point .countFrame{
    display: flex;
}
.point .sub{
    width:20%;
}
.point .value{
    width:60%;
    text-align: center;
}
.point .add{
    width:20%;
}
#go{
    width:100%;
    text-align: center;
    height:10%;
    line-height: 130rpx;
}